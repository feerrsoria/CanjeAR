generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql" // Make sure this matches your database type
  url      = env("DATABASE_URL") // THIS MUST BE env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum ProductCategory {
  ELECTRONICA
  COSAS_DEL_HOGAR
  MODA
  VEHICULOS
  OTROS
}

model Product {
  id          String @id @default(uuid())
  name        String
  price       Float
  images       String[]
  category    ProductCategory
  description String
  location    String
  publishedDate  DateTime @default(now())
  vendorId    String
  vendor      Vendor  @relation(fields: [vendorId], references: [id])

  @@map("products")
}

model Vendor {
  id          String @id @default(uuid())
  clerkUserId  String @unique           // Clerk user ID from auth
  profilePic  String?                  // Can be null
  email       String @unique
  name        String
  lastname    String
  sales       Int     @default(0)
  rating      Float   @default(0.0)
  location    String
  description String
  products    Product[]
  services Service[]

  @@map("vendors")
}

model Service {
  id          String @id @default(uuid())
  name        String
  price       Float
  description  String
  images      String[]
  location String
  publishedDate  DateTime @default(now())
  vendorId String
  vendor Vendor @relation(fields: [vendorId], references: [id])

  @@map("services")
}